extends ../layouts/default.pug

block main
    .space-y-6
        .bg-white.rounded.shadow.p-6
            h2.text-xl.font-bold.mb-4 User Registration
            form.flex.flex-col.gap-2.items-start(
                class='md:flex-row md:items-center'
                action="/search", method="get"
            )
                label.whitespace-nowrap(for='regNumber') Registration Number:
                input#regNumber.border.rounded.px-2.py-1.text-sm.w-full(
                    required=''
                    class='md:w-auto'
                    placeholder='Enter registration number'
                    type='text'
                    value=sbd
                    name='sbd'
                )
                button.bg-black.text-white.px-4.py-1.rounded.text-sm.cursor-pointer(
                    type='submit'
                    class='hover:bg-gray-800'
                ) Submit
        .bg-white.rounded.shadow.p-6
            h2.text-xl.font-bold.mb-2 Detailed Scores
            p.text-sm.text-gray-700.mb-4 Detailed view of search scores here!
            if sScores && sScores.length > 0
                ul.space-y-2
                    each item in sScores
                        li.flex.justify-between.bg-gray-100.rounded.px-4.py-2
                            span.font-medium.text-gray-800 #{item.subjectName}
                            span.font-semibold.text-blue-600 #{item.score}
            else
                p.text-gray-500 No scores found for the given registration number.

                
